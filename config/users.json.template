    "api": ["tech_lead", "devops_admin"],
    "backend": ["tech_lead", "devops_admin"],
    "frontend": ["your_telegram_username", "tech_lead"],
    "default": ["devops_admin"]
  },

  "settings": {
    "_optional": "可选配置 - 审批设置",
    "approval_timeout_minutes": 30,
    "reminder_interval_minutes": 5,
    "max_reminders": 6,
    "auto_reject_on_timeout": false
  },

  "_usage_examples": [
    "=== 使用示例 ===",
    "1. 简单配置：只需要 users 部分",
    "2. 高级配置：包含 project_mapping 和 settings",
