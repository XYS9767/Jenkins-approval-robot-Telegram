{
  "_comment": "用户权限配置模板",
  "_instructions": [
    "1. 复制此文件为 users.json",
    "2. 根据实际用户修改配置",
    "3. 删除所有以 _ 开头的注释行（可选）",
    "4. 确保JSON格式正确"
  ],
  
  "users": {
    "_required": "必需配置 - 用户列表，至少需要一个用户",
    "_format_simple": "简洁格式：用户名 -> 角色名",
    "your_telegram_username": "项目经理",
    "tech_lead": "技术负责人", 
    "devops_admin": "运维负责人",
    
    "_format_complex": "复杂格式示例（支持更多设置）",
    "advanced_user": {
      "role": "高级用户",
      "projects": ["project1", "project2"],
      "permissions": ["approve", "reject", "view"],
      "email": "user@company.com"
    }
  },

  "project_mapping": {
    "_optional": "可选配置 - 项目权限映射",
    "_help": "定义哪些用户可以审批哪些项目",
